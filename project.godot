; Engine configuration file.
; It's best edited using the editor UI and not directly,
; since the parameters that go here are not all obvious.
;
; Format:
;   [section] ; section goes between []
;   param=value ; assign values to parameters

config_version=4

_global_script_classes=[ {
"base": "Resource",
"class": "ItemDefs",
"language": "GDScript",
"path": "res://scenes/Items/ItemDefs.gd"
} ]
_global_script_class_icons={
"ItemDefs": ""
}

[application]

config/name="Solstice"
run/main_scene="res://scenes/World/World.tscn"
boot_splash/image="res://big-icon.png"
boot_splash/use_filter=false
boot_splash/bg_color=Color( 0, 0, 0, 1 )
config/icon="res://icon.png"

[autoload]

ResourceLoader="*res://ResourceLoader.gd"
InfoAreaTexts="*res://scenes/InfoAreas/InfoAreaTexts.gd"
PlayerData="*res://scenes/Player/PlayerData.gd"
LevelData="*res://scenes/Levels/LevelData.gd"

[display]

window/size/width=256
window/size/height=192
window/size/test_width=1024
window/size/test_height=768
window/stretch/mode="viewport"
window/stretch/aspect="keep"

[importer_defaults]

texture={
"compress/bptc_ldr": 0,
"compress/hdr_mode": 0,
"compress/lossy_quality": 0.7,
"compress/mode": 0,
"compress/normal_map": 0,
"detect_3d": false,
"flags/anisotropic": false,
"flags/filter": false,
"flags/mipmaps": false,
"flags/repeat": 0,
"flags/srgb": 2,
"process/HDR_as_SRGB": false,
"process/fix_alpha_border": true,
"process/invert_color": false,
"process/premult_alpha": false,
"size_limit": 0,
"stream": false,
"svg/scale": 1.0
}

[layer_names]

2d_physics/layer_1="Walls"
2d_physics/layer_2="Item"
2d_physics/layer_3="Player"
2d_physics/layer_4="Enemy"

[rendering]

quality/driver/driver_name="GLES2"
quality/2d/use_pixel_snap=true
vram_compression/import_etc=true
vram_compression/import_etc2=false
environment/default_clear_color=Color( 0, 0, 0, 1 )
quality/dynamic_fonts/use_oversampling=false
